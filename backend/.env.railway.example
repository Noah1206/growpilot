# Railway PostgreSQL Connection Example
# Copy this to .env and update with your actual Railway PostgreSQL URL

# Railway PostgreSQL Database
# Get this from Railway Dashboard > PostgreSQL Block > Variables > DATABASE_URL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST].railway.app:[PORT]/railway

# Example format:
# DATABASE_URL=postgresql://postgres:AbCdEfGhIjKlMnOp@containers-us-west-123.railway.app:7654/railway

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Reddit API (if using)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=GrowthPilot/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Twitter API (if using)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Application Settings
SECRET_KEY=your_secret_key_here_change_in_production
ENVIRONMENT=production
DEBUG=False

# CORS (for Railway deployment)
ALLOWED_ORIGINS=https://growthpilot-production.up.railway.app