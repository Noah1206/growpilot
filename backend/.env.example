# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# Application
SECRET_KEY=your_secret_key_here_change_in_production
ENVIRONMENT=development
DEBUG=True

# Security
# For development:
# ALLOWED_ORIGINS=http://localhost:9000,http://127.0.0.1:9000,http://localhost:6000,http://127.0.0.1:6000
# For production (Railway):
ALLOWED_ORIGINS=https://your-app.up.railway.app,https://yourdomain.com

# Rate Limiting
MAX_DAILY_SENDS_LINKEDIN=200
MAX_DAILY_SENDS_REDDIT=30
MAX_DAILY_SENDS_FACEBOOK=50
